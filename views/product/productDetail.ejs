<!DOCTYPE html>
<html>
    <head>
        <%- include("../partials/head-base", {title: "Detalle del producto"}) %>
        <link rel="stylesheet" href="/css/productDetail.css" />
        <link
            rel="stylesheet"
            href="/css/productDetail-md.css"
            media="(min-width: 481px)"
        />
        <link
            rel="stylesheet"
            href="/css/productDetail-lg.css"
            media="(min-width: 769px)"
        />
    </head>
    <body class="bg-muted">
        <header><%- include("../partials/header") %></header>
        <main>
            <h1
                class="product-title font-size-1-2 text-align-center padding-10"
            >
                <%= product.name %>
            </h1>

            <div
                class="product-container product-container-md product-container-lg padding-10"
            >
                <div class="column-1-lg">
                    <div
                        class="product-images-container bg-light padding-15 display-flex flex-direction-column product-images-container-lg"
                    >
                        <div
                            class="product-image-primary-container product-image-primary-container-lg"
                        >
                            <img
                                src="/images/products/<%= product.image %>"
                                alt=""
                                class="product-image-primary"
                            />
                        </div>
                        <div
                            class="product-image-secondary-container display-flex product-image-secondary-container-lg"
                        >
                            <div
                                class="product-image-secondary-item display-flex flex-direction-row"
                            >
                                <img
                                    src=""
                                    alt=""
                                    class="product-image-secondary"
                                />
                            </div>
                            <div class="product-image-secondary-item">
                                <img
                                    src=""
                                    alt=""
                                    class="product-image-secondary"
                                />
                            </div>
                            <div class="product-image-secondary-item">
                                <img
                                    src=""
                                    alt=""
                                    class="product-image-secondary"
                                />
                            </div>
                        </div>
                    </div>
                    <div class="product-text-container padding-15">
                        <div
                            class="product-header display-flex justify-content-space-between align-items-center"
                        >
                            <p
                                class="product-title font-size-1-3 font-weight-600"
                            >
                                <%= product.name %>
                            </p>
                            <i class="far fa-heart product-add-favourite"></i>
                        </div>
                        <p class="product-price text-secondary font-weight-600">
                            &#36;<%= toThousand(product.price) %>
                        </p>
                        <div class="product-details">
                            <p><%= product.description %></p>
                        </div>
                        <p
                            class="product-views font-size-0-8 font-style-italic text-dark"
                        >
                            <i class="far fa-eye text-dark"></i> 26
                        </p>
                        <p><%= product.location %></p>
                    </div>
                </div>

                <div class="column-2-md column-2-lg">
                    <div
                        class="product-seller-and-payment padding-y-15 product-seller-and-payment-md product-seller-and-payment-lg"
                    >
                        <div
                            class="product-seller-container display-flex justify-content-center"
                        >
                            <div
                                class="product-seller-info display-flex justify-content-center align-items-center"
                            >
                                <div class="product-seller-img-container">
                                    <img
                                        src="/images/seller-detail/vendedor.jpg"
                                        alt=""
                                        class="product-seller-img"
                                    />
                                </div>
                                <div
                                    class="product-seller-name-and-stars display-flex flex-direction-column justify-content-center align-items-center"
                                >
                                    <p class="product-seller-name">
                                        Juana PÃ©rez
                                    </p>
                                    <div class="product-seller-stars">
                                        <i class="fas fa-star"></i
                                        ><i class="fas fa-star"></i
                                        ><i class="fas fa-star"></i
                                        ><i class="fas fa-star"></i
                                        ><i class="far fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="product-payment-methods-container display-flex flex-direction-column align-items-center product-payment-methods-container-lg"
                        >
                            <p
                                class="product-payment-text font-size-1-0 font-weight-400 text-align-center"
                            >
                                Medios de pago aceptados:
                            </p>
                            <div
                                class="product-payment-icons-container display-flex justify-content-space-evenly width-100"
                            >
                                <div
                                    class="product-payment-icon-item bg-light display-flex justify-content-center align-items-center"
                                >
                                    <i
                                        class="fas fa-credit-card text-primary"
                                    ></i>
                                </div>
                                <div
                                    class="product-payment-icon-item bg-light display-flex justify-content-center align-items-center"
                                >
                                    <i
                                        class="far fa-money-bill-alt text-primary"
                                    ></i>
                                </div>
                                <div
                                    class="product-payment-icon-item bg-light display-flex justify-content-center align-items-center"
                                >
                                    <i
                                        class="fas fa-university text-primary"
                                    ></i>
                                </div>
                                <div
                                    class="product-payment-icon-item bg-light display-flex justify-content-center align-items-center"
                                >
                                    <i
                                        class="fas fa-mobile-alt text-primary"
                                    ></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="product-actions-container display-flex flex-direction-column align-items-center justify-content-center product-actions-container-md"
                    >
                        <div
                            class="product-buy-container width-50 product-action-md"
                        >
                            <form
                                action="/product/productCart/<%= product.id %> "
                                class="product-edit-form margin-x-5"
                                method="GET"
                            >
                                <button class="button bg-success text-light">
                                    Comprar
                                </button>
                            </form>
                        </div>
                        <div
                            class="product-message-container width-50 product-action-md"
                        >
                            <form
                                action=""
                                method="GET"
                                class="product-delete-form margin-x-5"
                            >
                                <input
                                    type="number"
                                    name="id"
                                    value="<%= product.id %>"
                                    hidden
                                />
                                <button class="button bg-secondary text-light">
                                    Mensaje
                                </button>
                            </form>
                        </div>

                        <div
                            class="product-edit-container width-50 product-action-md"
                        >
                            <form
                                action="/product/<%= product.id %>/edit"
                                class="product-edit-form margin-x-5"
                                method="GET"
                            >
                                <button class="button bg-warning text-light">
                                    Editar
                                </button>
                            </form>
                        </div>
                        <div
                            class="product-delete-container width-50 product-action-md"
                        >
                            <form
                                action="/product/?_method=DELETE"
                                method="POST"
                                class="product-delete-form margin-x-5"
                            >
                                <input
                                    type="number"
                                    name="id"
                                    value="<%= product.id %>"
                                    hidden
                                />
                                <button class="button bg-danger text-light">
                                    Borrar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="bg-dark text-light text-align-center">
            <%- include("../partials/footer") %>
        </footer>
    </body>
</html>
