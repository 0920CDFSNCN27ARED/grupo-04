<!DOCTYPE html>
<html>
    <head>
        <%- include("partials/head-base", {title: "Bienvenido a Desapego"}) %>

        <link rel="stylesheet" href="/css/index.css" />
        <link
            rel="stylesheet"
            href="/css/index-lg.css"
            media="(min-width: 769px)"
        />
    </head>

    <body class="bg-muted">
        <header>
            <%- include("partials/header") %>
        </header>
        <main>
            <div class="form-index-container bg-medium  form-index-container-lg">
                <form action="" class="form-index width-100">
                    <label for="distancia" class="display-block text-light"></label>
                        <span
                            class="form-index-label bg-muted text-primary"
                        >¿Qué se vende cerca?</span
                    ></label>
                    <div class="display-flex  align-items-baseline index-range-container">
                        <p>- km</p>
                        <input
                            type="range"
                            id="distancia"
                            name="distancia"
                            min="0"
                            max="50"
                        />
                        <p>+ km</p>
                    </div>
                    <label for="precio" class="display-block"
                        >                <span
                    class="form-index-label bg-muted text-primary">¿Cuánto quiero gastar?</span></label
                    >
                    <div class="display-flex align-items-baseline index-range-container">
                        <p>$</p>
                        <input
                            type="range"
                            id="precio"
                            name="precio"
                            min="0"
                            max="50"
                        />
                        <p>$$$</p>
                    </div>
                    <button class="button" type="submit">
                        Buscar
                    </button>
                </form>
                <form class="form-index">
                    <input
                        type="text"
                        placeholder="Quiero buscar por producto 🔍"
                        class="display-block form-index-search-bar text-align-center"
                    />
                </form>
            </div>
            <div
                class="featured-products display-flex justify-content-center width-100 featured-products-lg"
            >
                <%  for (const product of
                products) { %>
                <div
                    class="featured-products-item-container bg-light padding-10 featured-products-item-container-lg"
                >
                <a href="/product/<%= product.id %>" class="anchor">
                    <div class="featured-products-image-container width-100">
                        <img
                            src="/images/products/<%= product.image %>"
                            alt=""
                            class="width-100"
                        />
                    </div>
                    <p class="font-weight-600"><%= product.name %></p>
                    <p class="text-success font-weight-600">
                        $<%= product.price %>
                    </p>
                    </a>
                </div>
                <% } %>
            </div>
            <div class="slider">
                <ul>
                    <li>
                        <img src="/images/products/iphone.jpg" alt="" />
                    </li>
                    <li>
                        <img src="/images/products/macbookpro.jpg" alt="" />
                    </li>
                    <li><img src="/images/products/tv.jpg" alt="" /></li>
                    <li>
                        <img src="/images/products/ventilador.jpg" alt="" />
                    </li>
                    <li>
                        <img src="/images/products/desapegate.jpg" alt="" />
                    </li>
                </ul>
            </div>
            <div class="display-flex justify-content-center">
                <a href="https://www.google.com.ar" class=""
                    ><button
                        class="bg-primary cursor-pointer boton-vender text-light"
                    >
                        ¡Quiero vender!
                    </button></a
                >
            </div>
        </main>

        <footer class="bg-dark text-light text-align-center">
            <%- include("partials/footer") %>
        </footer>
    </body>
</html>
